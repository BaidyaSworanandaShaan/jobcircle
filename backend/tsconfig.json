{
  "compilerOptions": {
    "target": "ES2020", // Modern JS output
    "module": "CommonJS", // Node.js module system
    "outDir": "dist", // Compiled files go here
    "rootDir": "src", // Your source files folder (change if needed)
    "strict": true, // Enable all strict checks
    "esModuleInterop": true, // Allow default import for commonjs modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Skip type checking for @types libraries
    "moduleResolution": "node", // Resolve modules like Node.js
    "resolveJsonModule": true, // Allow importing JSON
    "types": ["node", "express"] // Include Node and Express types globally
  },
  "include": ["src/**/*.ts"], // Only compile TS in src folder
  "exclude": ["node_modules", "dist"]
}
